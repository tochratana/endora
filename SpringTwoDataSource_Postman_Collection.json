							"raw": "{{keycloakUrl}}/realms/{{realm}}/protocol/openid-connect/token",
							"host": ["{{keycloakUrl}}"],
							"path": ["realms", "{{realm}}", "protocol", "openid-connect", "token"]
						},
						"description": "Use this when your access token expires to get a new one using the refresh token"
